<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/faceContainer1"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@color/black"
    android:layout_gravity="center"
    android:radius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left side (image view for the detected face) -->
        <ImageView
            android:id="@+id/personimage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/cardview1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/personimage">

            <!-- Text view for displaying person's details -->
            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Person Details"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
